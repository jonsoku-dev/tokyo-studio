{
	"name": "itcom-monorepo",
	"private": true,
	"packageManager": "pnpm@10.4.1",
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"dev": "pnpm --filter web dev",
		"dev:admin": "pnpm --filter admin dev",
		"build": "pnpm --filter web build",
		"build:admin": "pnpm --filter admin build",
		"build:all": "pnpm -r build",
		"typecheck": "pnpm -r typecheck",
		"lint": "pnpm --filter web lint",
		"db:push": "pnpm --filter @itcom/db exec drizzle-kit push",
		"db:studio": "pnpm --filter @itcom/db exec drizzle-kit studio",
		"deploy:web": "./scripts/deploy.sh web",
		"deploy:admin": "./scripts/deploy.sh admin",
		"deploy:all": "./scripts/deploy.sh all",
		"deploy:web:preview": "./scripts/deploy.sh web --preview",
		"deploy:admin:preview": "./scripts/deploy.sh admin --preview"
	}
}